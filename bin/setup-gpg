#!/bin/bash

if [ -z "${FULLNAME}" ]; then
  FULLNAME="Bernhard Rode"
fi

if [ -z "${EMAIL}" ]; then
  EMAIL="mail@bernhardrode.de"
fi

if [ -z "${GPG_KEY_TYPE}" ]; then
  GPG_KEY_TYPE="RSA"
fi

if [ -z "${GPG_KEY_LENGTH}" ]; then
  GPG_KEY_LENGTH="4096"
fi

echo "âœ”  Full name: ${FULLNAME}"
echo "âœ”  Email: ${EMAIL}"
echo "âœ”  GPG key length: ${GPG_KEY_LENGTH}"
echo "âœ”  GPG key type: ${GPG_KEY_TYPE}"

OUTFILE="gpg-genkey-batch"

echo "Key-Type: ${GPG_KEY_TYPE}" > ${OUTFILE}
echo "Key-Length: ${GPG_KEY_LENGTH}" >> ${OUTFILE}
echo "Name-Real: ${FULLNAME}" >> ${OUTFILE}
echo "Name-Email: ${EMAIL}" >> ${OUTFILE}
echo "Expire-Date: 0" >> ${OUTFILE}

echo "âœ”  GPG key generation batch file: ${OUTFILE}"
cat ${OUTFILE}

OS=$(which-os)
TITLE="GPG - ${USER}@${HOSTNAME}-${OS}"
echo "âœ”  GPG key title: ${TITLE}"

if ! [ -d ~/.gnupg ] ; then
  echo "ðŸ” gpg --batch --gen-key gpg-genkey-batch"
  gpg --batch --gen-key gpg-genkey-batch
  echo "âœ”  GPG key generated"
fi

rm -Rf ${OUTFILE}

GPG_KEY_ID=$(gpg --list-secret-keys --keyid-format=long | grep sec | cut -d'/' -f2 | cut -d' ' -f1)
echo "âœ”  GPG key ID: ${GPG_KEY_ID}"
OS=$(which-os)
echo "âœ”  OS: ${OS}"
TITLE="${GPG_KEY_ID}|${USER}@${HOSTNAME}-${OS}"
echo "âœ”  GPG key title: ${TITLE}"
gpg --armor --export $GPG_KEY_ID > ~/.gnupg/id_rsa.pub
echo "âœ”  Public key exported to ~/.gnupg/id_rsa.pub"
cat ~/.gnupg/id_rsa.pub

if [ -x "$(command -v gh)" ]; then
  # gh gpg-key add ~/.gnupg/id_rsa.pub -t "${TITLE}"
  echo "âœ”  GitHub GPG key added"
else
  echo "âš ï¸  gh not installed"
fi

GIT_CONFIG="${HOME}/.gitconfig_local"
cat >${GIT_CONFIG} <<EOF
[user]
  email = ${EMAIL}
  name = ${FULLNAME}
  singingkey = ${GPG_KEY_ID}

[commit]
  gpgsign = true
EOF

echo "âœ”  Updated ${GIT_CONFIG}"

