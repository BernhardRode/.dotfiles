# ZSH_THEME="spaceship"
# source "$HOME/.config/zsh/spaceship-prompt/spaceship.zsh"

# Display time
# SPACESHIP_TIME_SHOW=true

# Display username always
SPACESHIP_USER_SHOW=always

# Do not truncate path in repos
# SPACESHIP_DIR_TRUNC_REPO=false

# Add custom Ember section
# See: https://github.com/spaceship-prompt/spaceship-ember
# spaceship add ember

# Add a custom vi-mode section to the prompt
# See: https://github.com/spaceship-prompt/spaceship-vi-mode
# spaceship add --before char vi_mode

# This sets to add a empty line
SPACESHIP_PROMPT_ADD_NEWLINE=true

# This sets host to be always displayed
# SPACESHIP_HOST_SHOW="always"
# SPACESHIP_HOST_PREFIX="on "